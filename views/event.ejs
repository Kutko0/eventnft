<%- include('partials/header'); %> <%- include('partials/navbar', {link:
'events'}); %>

<div class="container">
    <div>
        <h1 class="d-flex justify-content-center">Event <%= event.title %></h1>

        <p class="d-flex justify-content-center">
            Here, a list of quests will be shown
        </p>

        <div class="row">
            <% quests.forEach(quest => { %>
            <div class="col-sm-6 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= quest.title %></h5>
                        <p class="card-text">
                            Organiser: <%= quest.description %>
                        </p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('partials/footer'); %>
